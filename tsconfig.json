{
  "version": "2.0.0",
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}
